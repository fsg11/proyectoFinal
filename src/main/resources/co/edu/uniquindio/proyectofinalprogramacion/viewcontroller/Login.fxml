<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="250"
            fx:controller="co.edu.uniquindio.proyectofinalprogramacion.controller.LoginController">
    <children>
        <Label text="Iniciar Sesión" layoutX="150" layoutY="30" style="-fx-font-size: 18px;"/>
        <Label text="Usuario:" layoutX="70" layoutY="90"/>
        <TextField fx:id="usuarioField" layoutX="140" layoutY="85" prefWidth="180"/>
        <Label text="Contraseña:" layoutX="50" layoutY="130"/>
        <PasswordField fx:id="contrasenaField" layoutX="140" layoutY="125" prefWidth="180"/>
        <Button text="Ingresar" layoutX="160" layoutY="180" prefWidth="80" onAction="#handleLogin"/>
        <Button text="Registrarme" layoutX="260" layoutY="180" prefWidth="100" onAction="#handleRegistro"/>
    </children>
</AnchorPane>